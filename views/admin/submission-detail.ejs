<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Submission Details - Admin</title>
    <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
    <div class="admin-container">
        <div class="detail-header">
            <div class="header-left">
                <a href="/admin/submissions" class="back-btn">
                    <i class="fas fa-arrow-left"></i> Back to Submissions
                </a>
                <h1>Submission Details</h1>
            </div>
            <div class="header-right">
                <span class="status-badge <%= submission.status %>">
                    <%= submission.status %>
                </span>
                <select id="statusUpdate" class="status-select" data-id="<%= submission._id %>">
                    <option value="new" <%= submission.status === 'new' ? 'selected' : '' %>>New</option>
                    <option value="in_progress" <%= submission.status === 'in_progress' ? 'selected' : '' %>>In Progress</option>
                    <option value="completed" <%= submission.status === 'completed' ? 'selected' : '' %>>Completed</option>
                    <option value="archived" <%= submission.status === 'archived' ? 'selected' : '' %>>Archived</option>
                </select>
            </div>
        </div>

        <div class="detail-content">
            <div class="detail-section">
                <h2><i class="fas fa-user"></i> Contact Information</h2>
                <div class="detail-grid">
                    <div class="detail-row">
                        <label>Name:</label>
                        <span><%= submission.name %></span>
                    </div>
                    <div class="detail-row">
                        <label>Email:</label>
                        <span><%= submission.email %></span>
                    </div>
                    <div class="detail-row">
                        <label>Mobile:</label>
                        <span><%= submission.mobile %></span>
                    </div>
                </div>
            </div>

            <div class="detail-section">
                <h2><i class="fas fa-briefcase"></i> Project Details</h2>
                <div class="detail-grid">
                    <div class="detail-row">
                        <label>Project Type:</label>
                        <span><%= submission.projectType === 'static' ? 'Static Website' :
                               submission.projectType === 'dynamic' ? 'Dynamic Website' :
                               submission.projectType === 'ecommerce' ? 'E-commerce Website' :
                               submission.projectType === 'mobile' ? 'Mobile App (iOS/Android)' :
                               submission.projectType === 'webapp' ? 'Web Application' :
                               submission.projectType === 'maintenance' ? 'Website Maintenance' :
                               submission.projectType === 'redesign' ? 'Website Redesign' :
                               submission.projectType === 'consulting' ? 'Technical Consulting' :
                               submission.projectType %></span>
                    </div>
                    <div class="detail-row">
                        <label>Budget Range:</label>
                        <span><%= submission.budget === 'small' ? '₹10,000 - ₹25,000' :
                               submission.budget === 'medium' ? '₹25,000 - ₹50,000' :
                               submission.budget === 'large' ? '₹50,000 - ₹1,00,000' :
                               submission.budget === 'enterprise' ? '₹1,00,000+' :
                               submission.budget %></span>
                    </div>
                    <div class="detail-row">
                        <label>Timeline:</label>
                        <span><%= submission.timeline === 'urgent' ? 'Less than 1 week' :
                               submission.timeline === 'short' ? '1-2 weeks' :
                               submission.timeline === 'medium' ? '2-4 weeks' :
                               submission.timeline === 'long' ? '1-2 months' :
                               submission.timeline === 'flexible' ? 'Flexible' :
                               submission.timeline %></span>
                    </div>
                    <div class="detail-row">
                        <label>Submission Date:</label>
                        <span><%= new Date(submission.submission_date).toLocaleString() %></span>
                    </div>
                </div>
            </div>

            <div class="detail-section">
                <h2><i class="fas fa-comment-alt"></i> Message</h2>
                <div class="message-box">
                    <%= submission.message %>
                </div>
            </div>
        </div>
    </div>

    <!-- Add Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="/js/admin.js"></script>
</body>
</html>
