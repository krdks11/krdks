<section class="portfolio">
    <div class="container">
        <h1>My Projects</h1>
        
        <!-- Project Categories -->
        <div class="project-categories">
            <button class="category-btn active" data-category="all">All</button>
            <button class="category-btn" data-category="web">Web Development</button>
            <button class="category-btn" data-category="games">Games</button>
            <button class="category-btn" data-category="tools">Tools & Apps</button>
        </div>

        <!-- Web Development Projects -->
        <div class="portfolio-section" id="web-projects">
            <h2 class="section-title">Web Development Projects</h2>
            <div class="portfolio-grid">
                <!-- ALJMWEB Project -->
                <div class="project-card" data-category="web">
                    <a href="/project/aljmweb" class="project-link">
                        <div class="project-image" data-title="<%= projects.aljmweb.title %>">
                            <img src="<%= projects.aljmweb.screenshots[0] || '/images/placeholder.png' %>" 
                                 alt="<%= projects.aljmweb.title %>"
                                 onerror="this.src='/images/placeholder.png'">
                            <div class="project-overlay">
                                <div class="tech-stack">
                                    <% projects.aljmweb.technologies.forEach(tech => { %>
                                        <span><%= tech %></span>
                                    <% }); %>
                                </div>
                            </div>
                        </div>
                        <div class="project-info">
                            <h3><%= projects.aljmweb.title %></h3>
                            <p><%= projects.aljmweb.description %></p>
                        </div>
                    </a>
                </div>

                <!-- Portfolio Website -->
                <div class="project-card" data-category="web">
                    <a href="/project/portfolio" class="project-link">
                        <div class="project-image" data-title="<%= projects.portfolio.title %>">
                            <img src="<%= projects.portfolio.screenshots[0] || '/images/placeholder.png' %>" 
                                 alt="<%= projects.portfolio.title %>"
                                 onerror="this.src='/images/placeholder.png'">
                            <div class="project-overlay">
                                <div class="tech-stack">
                                    <% projects.portfolio.technologies.forEach(tech => { %>
                                        <span><%= tech %></span>
                                    <% }); %>
                                </div>
                            </div>
                        </div>
                        <div class="project-info">
                            <h3><%= projects.portfolio.title %></h3>
                            <p><%= projects.portfolio.description %></p>
                        </div>
                    </a>
                </div>
            </div>
        </div>

        <!-- Games Section -->
        <div class="portfolio-section" id="games-projects">
            <h2 class="section-title">Games & Interactive Projects</h2>
            <div class="portfolio-grid">
                <!-- Snake Ladder Game -->
