                            <h3><%= projects['snake-ladder'].title %></h3>
                            <p><%= projects['snake-ladder'].description %></p>
                        </div>
                    </a>
                </div>
            </div>
        </div>

        <!-- Tools & Apps Section -->
        <div class="portfolio-section" id="tools-projects">
            <h2 class="section-title">Tools & Applications</h2>
            <div class="portfolio-grid">
                <!-- Currency Converter -->
                <div class="project-card" data-category="tools">
                    <a href="/project/currency-converter" class="project-link">
