<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Project Details</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/pages/project-detail.css">
</head>
<body>
    <div class="project-detail">
        <div class="project-header">
            <h1 class="project-title"><%= project.title || 'Project Details' %></h1>
            <p class="project-description"><%= project.description || 'No description available' %></p>
        </div>

        <div class="project-screenshots">
            <% if (project.screenshots && project.screenshots.length > 0) { %>
                <div class="screenshot-container">
                    <img src="<%= project.screenshots[0] %>" 
                         alt="<%= project.title %> Screenshot"
                         loading="lazy"
                         onerror="this.src='/images/placeholder.png'">
                </div>
            <% } %>
        </div>

        <% if (project.features && Array.isArray(project.features) && project.features.length > 0) { %>
            <div class="project-features">
                <h2 class="features-title">Key Features</h2>
                <ul class="features-list">
                    <% project.features.forEach(feature => { %>
                        <li><%= feature %></li>
                    <% }); %>
                </ul>
            </div>
        <% } %>

        <div class="project-links">
            <a href="/portfolio" class="project-link">Back to Portfolio</a>
            <% if (project.liveDemo) { %>
                <a href="<%= project.liveDemo %>" class="project-link" target="_blank">View Live Demo</a>
            <% } %>
            <% if (project.sourceCode) { %>
                <a href="<%= project.sourceCode %>" class="project-link" target="_blank">View Source Code</a>
            <% } %>
        </div>
    </div>
</body>
</html>
